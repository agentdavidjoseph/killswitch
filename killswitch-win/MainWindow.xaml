<Window x:Class="Killswitch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Killswitch.Properties"
        Title="Killswitch" Height="350" Width="525" Icon="Red.ico" WindowStyle="ThreeDBorderWindow">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
        <Label Content="Current name:" HorizontalAlignment="Left" Margin="37,76,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding name, Source={x:Static properties:Settings.Default}, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Padding="0,2,0,0" Margin="127,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237"/>

    </Grid>
</Window>
